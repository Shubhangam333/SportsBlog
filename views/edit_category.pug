extends layout

block content
   .container
    h1 #{title}
    if(errors)
       each error , i in errors
        li.alert.alert-danger #{error.msg}
    form(method="post",action='/categories/edit/'+category._id)
      .form-group 
        label Title:
        input.form-control(name='title',type='text',value=category.title)
      .form-group
        label Description:
        textarea.form-control(name='description',type='text') #{category.description}
      input.btn.btn-primary(type='submit',name='submit',value='Save')
      a.btn.btn-default(href='/manage/categories') Back
      a.btn.btn-danger.float-right.category-delete(href='/manage/categories',data-cat-id=category._id) Delete